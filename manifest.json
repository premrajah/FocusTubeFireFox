{
  "manifest_version": 3,
  "name": "FocusTube",
  "description": "Removes specific shorts and decrease thumbnail size from YouTube",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [ "*://*.youtube.com/*" ],
      "js": [ "content.js" ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusTube"
  }
}
